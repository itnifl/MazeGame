<?import javafx.scene.layout.VBox ?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane fx:id="screenRoot" fx:controller="main.game.maze.GameOverController" xmlns:fx="http://javafx.com/fxml">
    <VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER">
        <AnchorPane VBox.vgrow="ALWAYS" prefHeight="800" prefWidth="600" minHeight="0.0" minWidth="0.0" style="-fx-background-color: transparent;" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
            <VBox alignment="CENTER">
                <Label text="Game Over!" style="-fx-font-size: 60px; -fx-text-fill: red; -fx-font-weight: bold;" />
                <Label text="Your score: " style="-fx-font-size: 18px; -fx-text-fill: black;" />
                <Label fx:id="scoreLabel" text="0" style="-fx-font-size: 24px; -fx-text-fill: black; -fx-font-weight: bold;" />
                <Label fx:id="deathPenaltyNoticeLabel" text="- Including death penalty" style="-fx-font-size: 16px; -fx-text-fill: red; -fx-font-weight: bold; -fx-visibility: hidden;" />
                <Label fx:id="damagePenaltyNoticeLabel" text="- Including damage penalty" style="-fx-font-size: 16px; -fx-text-fill: red; -fx-font-weight: bold; -fx-visibility: hidden;" />
                <Button text="Save Score" onAction="#saveScore"/>            
                <Button fx:id="restartButton" text="Restart" onAction="#restartGame"/>
            </VBox>
        </AnchorPane>
    </VBox>
</AnchorPane>   
